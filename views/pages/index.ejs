<main>
            <!-- Carousel -->
            <section id="maintitle" class="text-center text-white">
                <h1 class="display-1 d-none d-md-block">Tour Melbourne</h1>
            </section>
            <div id="carousel" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carousel" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel" data-slide-to="1"></li>
                    <li data-target="#carousel" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/Carousel01.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="./images/Carousel02.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="./images/Carousel03.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>

            </div>
            <!--Carousel End-->

            <!--Favourites section-->
            <section id="favouritesTitle">
                <h2 class="text-white text-center my-4">Your Favourite Pages</h2>
            </section>
            <div class="bg-white my">
                <div id="pagecards">
                        <div class="card-deck text-center py-5">
                             <%#this loops the information from the tourservices file which further pulls information from the tours.json file.%>
                            <% topTours.forEach(function(tour) {%>
                            <div class="card border-0 col-mb-3">
                                <img class="card-img-top rounded-circle" src="images/<%-tour.card%>" alt="Photo of <%-tour.title%>">
                                <div class="card-body">
                                    <h5 class="card-title text"><%- tour.title%></h5>
                                    <p class="card-text"><%-tour.summary%></p>
                                    <button type="button" class="btn btn-warning">Go to Page</button>
                                </div>
                            </div>
                    <% }) %>
                    </div>
                </div>
            </div>
            <!--End of Favourites section-->

            <%-include('./feedback')%>

            <!--Start of Contact section-->
            <div id="contactform">
                <div class="row">
                    <div class="col-md-5">
                        <img class="d-none d-md-block" src="images/ContactImage.jpg" alt="Melbourne tram">
                    </div>
                    <div class="col-10 col-md-4 offset-1 pt-5">
                        <form name="contactform" method="post" action="/contact">
                            <div class="form-group row">
                                <label for="firstName" class="col-md-3">First Name: </label>
                                <input type="text" id="firstName" maxlength="50" class="form-control col-md-9" placeholder="eg. John" size="30" required>
                            </div>

                            <div class="form-group row">
                                <label for="lastName" class="col-md-3">Last Name: </label>
                                <input type="text" id="lastName" maxlength="50" size="30" class="form-control col-md-9" placeholder="eg. Doe" required>
                            </div>

                            <div class="form-group row">
                                <label for="fbEmail" class="col-md-3">Email: </label>
                                <input type="text" id="fbEmail" maxlength="80" size="30" class="form-control col-md-9" placeholder="name@example.com" required>
                            </div>

                            <div class="form-group row">
                                <label for="FbComments" class="col-md-3">Query: </label>
                                <textarea id="fbComments" maxlength="1000" class="form-control col-md-9" rows="4" required></textarea>
                            </div>

                            <div class="form-group row">
                                <button type="submit" class="btn btn-primary pull-right offset-md-10">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!--End of contact section-->
        </main>